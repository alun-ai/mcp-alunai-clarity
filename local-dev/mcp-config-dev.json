{
  "mcpServers": {
    "alunai-clarity-dev": {
      "command": "docker",
      "args": [
        "exec", "-i", "alunai-clarity-mcp-dev",
        "python", "-m", "clarity"
      ],
      "env": {
        "PYTHONUNBUFFERED": "1",
        "CLARITY_DEBUG_MODE": "true",
        "CLARITY_LOG_LEVEL": "DEBUG"
      }
    }
  }
}